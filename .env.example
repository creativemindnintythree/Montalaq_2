# ============ Django ============
DJANGO_SETTINGS_MODULE=montalaq_project.settings
SECRET_KEY=change-me-in-prod
DEBUG=1
ALLOWED_HOSTS=*

# Optional but recommended
TIMEZONE=UTC
DJANGO_LOG_LEVEL=INFO
PORT=8000

# ============ Storage ============
# Default dev DB: SQLite (mounted volume)
SQLITE_PATH=/app/data/db.sqlite3

# If you migrate to Postgres later:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/montalaq

# ============ Redis / Celery ============
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Worker tuning (safe dev defaults)
CELERY_CONCURRENCY=4
CELERY_MAX_TASKS_PER_CHILD=100
CELERY_PREFETCH_MULTIPLIER=4
# CELERY_TASK_ACKS_LATE=1
# CELERY_TASK_TIME_LIMIT=120
# CELERY_TASK_SOFT_TIME_LIMIT=90

# ============ App Settings (agency 013 hardening) ============
DEFAULT_PROVIDER_ORDER=AllTick
ALLOW_FALLBACKS=0
AUTOSLOWDOWN=1

# Freshness intervals â†’ used by serializers & heartbeat logic
EXPECTED_INTERVAL_1m=60
EXPECTED_INTERVAL_15m=1800
EXPECTED_INTERVAL_1h=5400
EXPECTED_INTERVAL_4h=21600

# Optional: explicitly set analyzed pairs/timeframes
# PAIRS=EURUSD,GBPUSD,USDJPY,AUDUSD,GBPJPY
# TIMEFRAMES=15m,1h

# ============ Providers / API Keys ============
ALLTICK_API_KEY=your-alltick-api-key-here
TWELVEDATA_API_KEY=your-twelvedata-api-key-here
DEFAULT_PROVIDER_ORDER=AllTick
C_FORCE_ROOT=1
